<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextViewLittle">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="TextView_little_gray" parent="TextViewLittle">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextView_little_black" parent="TextViewLittle">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextView_little_white" parent="TextViewLittle">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">30dp</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalButton">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
