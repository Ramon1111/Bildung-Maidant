    </LinearLayout>


    <TextView
        android:id="@+id/fmmTVMensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/fmmTVMensajes"
        android:textColor="@color/primary"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout" />

    <ImageView
        android:id="@+id/fmmIVMessage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="170dp"
        app:layout_constraintRight_toRightOf="@+id/fmmTVMensajes"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout"
        app:srcCompat="@drawable/ic_message"
        tools:ignore="VectorDrawableCompat" />


    <TextView
        android:id="@+id/fmmTVNuevoMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:text="@string/fmmTVNuevoMensaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout" />

    <ImageView
        android:id="@+id/fmmIVNewMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout"
        app:srcCompat="@drawable/ic_newmessage"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/MensajePrueba3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:padding="12dp"
        android:text="La profesora dijo que no importa si..."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="33dp"></TextView>

    <TextView
        android:id="@+id/MensajePrueba2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:padding="12dp"
        android:text="Listo amigo, ya envié la información"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="33dp"></TextView>

    <TextView
        android:id="@+id/MensajePrueba1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:padding="12dp"
        android:text="Hola Ramón, ¿ya tienes tu tarea?"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="33dp"></TextView>

    <ListView
        android:id="@+id/fmmLVMessages"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_marginTop="160dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/divider"
        android:dividerHeight="2dp"
        android:paddingLeft="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmmLinearLayout">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>