<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ferTWIndicacion01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:text="@string/ferTWIndicacion01"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/third_text"
        ></TextView>

    <EditText
        android:id="@+id/ferETNombreRecordatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/primary_text"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/ferIVDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_edit_black_24dp"
            ></ImageView>
        <TextView
            android:id="@+id/ferTWIndicacion02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/ferTWIndicacion02"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/third_text"
            ></TextView>
    </LinearLayout>

    <EditText
        android:id="@+id/ferETDescripcionRecordatorio"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/primary_text"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ferTWIndicacion03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="18dp"
            android:text="@string/ferTWIndicacion03"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            ></TextView>
        <ImageButton
            android:id="@+id/ferIBAgregarCampo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:background="@color/default_background"
            ></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/ferTWIndicacion04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/ferTWIndicacion04"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            ></TextView>

        <TextView
            android:id="@+id/ferTWIndicacion05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="127dp"
            android:text="@string/ferTWIndicacion05"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/ferIBFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ic_today_black_40dp"
            android:background="@color/default_background"
            ></ImageButton>
        <EditText
            android:id="@+id/ferETFecha"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            ></EditText>
        <ImageButton
            android:id="@+id/ferIBHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp"
            android:background="@color/default_background"
            ></ImageButton>
        <EditText
            android:id="@+id/ferETHorario"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/ferBTNCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="@string/ferBTNCancelar"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@color/accent"
            android:textSize="20dp"
            ></Button>
        <Button
            android:id="@+id/ferBTNActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="@string/ferBTNActualizar"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:background="@color/accent"
            android:textSize="20dp"
            ></Button>
    </LinearLayout>

</LinearLayout>