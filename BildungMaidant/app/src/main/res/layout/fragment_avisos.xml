<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/faviICNexclamacion"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        app:srcCompat="@drawable/ic_action_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/faLLAgregar"
        android:layout_below="@+id/faviICNexclamacion">
        <TextView
            android:id="@+id/faTWNuevoAviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="15dp"
            android:text="@string/faTWNuevoAviso"
            style="@style/NormalTextView"
            />
        <ImageButton
            android:id="@+id/faIBNuevoAviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:background="@color/default_background"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/faviTWavisotitulo"
        android:layout_width="143dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/Avisos"
        android:textColor="@color/primary_dark"
        android:textSize="40dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/faRVAvisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faLLAgregar"
        android:padding="20dp"/>

</RelativeLayout>